{
  "window": {
    "width": 1200,
    "height": 800,
    "minWidth": 900,
    "minHeight": 600,
    "resizable": true
  },
  "layout": {
    "controlPanel": {
      "width": 260,
      "position": "left"
    },
    "signalFlow": {
      "height": 70,
      "position": "top"
    },
    "keyboard": {
      "height": 90,
      "position": "bottom"
    },
    "visualizationGrid": {
      "rows": 2,
      "cols": 2,
      "defaultPanels": [
        { "type": "oscilloscope", "row": 0, "col": 0 },
        { "type": "spectrum", "row": 0, "col": 1 },
        { "type": "poleZero", "row": 1, "col": 0 },
        { "type": "bode", "row": 1, "col": 1 }
      ]
    }
  },
  "components": {
    "panels": {
      "margin": 5,
      "spacing": 22,
      "innerMargin": 18,
      "cornerRadius": 15.0,
      "titleFontSize": 20.0,
      "titleYOffset": 6,
      "titleHeight": 28,
      "titleWidthOffset": 0
    },
    "leftPanel": {
      "width": 370
    },
    "oscillatorPanel": {
      "x": 30,
      "y": 80,
      "width": 320,
      "height": 80,
      "comboOffsetX": 30,
      "comboX": 120,
      "comboWidth": 170,
      "comboHeight": 32,
      "comboYOffset": -2,
      "labelHeight": 22,
      "comboY": 40
    },
    "filterPanel": {
      "width": 320,
      "height": 150,
      "knobSize": 80,
      "knobSpacing": 80,
      "knobYOffset": 2,
      "knob1X": 80,
      "knob2X": 200,
      "labelYOffset": 38,
      "textBoxWidth": 60,
      "textBoxHeight": 20
    },
    "envelopePanel": {
      "width": 320,
      "height": 260,
      "knobSize": 80,
      "knobSpacing": 0,
      "knobStartX": 28,
      "knobYOffset": 2,
      "visHeight": 100,
      "visYOffset": 38,
      "visXOffset": 22,
      "textBoxWidth": 40,
      "textBoxHeight": 20
    },
    "bottomArea": {
      "height": 110,
      "paddingH": 25,
      "paddingV": 5
    },
    "volumeSection": {
      "width": 100,
      "paddingH": 5,
      "meterWidth": 20,
      "labelHeight": 18,
      "textBoxWidth": 60,
      "textBoxHeight": 20
    },
    "keyboardPanel": {
      "cornerRadius": 10,
      "paddingV": 5
    },
    "vizControls": {
      "areaHeight": 40,
      "hPad": 10,
      "vPad": 5,
      "bottomPad": 10,
      "buttonSpacing": 5,
      "sectionSpacing": 15,
      "probeSpacing": 5
    },
    "buttons": {
      "scope": {
        "width": 60
      },
      "spectrum": {
        "width": 70
      },
      "probe": {
        "width": 45
      },
      "freeze": {
        "width": 55
      },
      "clear": {
        "width": 50
      },
      "timeLabel": {
        "width": 35
      }
    },
    "sliders": {
      "timeWindow": {
        "textBoxWidth": 50,
        "textBoxHeight": 20,
        "minValue": 1.0,
        "maxValue": 50.0,
        "step": 0.5,
        "defaultValue": 10.0
      }
    },
    "oscilloscope": {
      "triggerHysteresis": 0.01,
      "minAmplitudeThreshold": 0.001,
      "overlay": {
        "probeIndicator": {
          "x": -50,
          "y": 5,
          "width": 45,
          "height": 15
        },
        "timeWindow": {
          "x": 5,
          "y": 5,
          "width": 60,
          "height": 15
        },
        "frequencyInfo": {
          "y": 5,
          "height": 14
        },
        "amplitudeInfo": {
          "x": 5,
          "y": 20,
          "lineHeight": 12
        },
        "sampleRateInfo": {
          "x": -160,
          "y": -15,
          "width": 155,
          "height": 12
        }
      },
      "amplitudeMarkers": {
        "dashLength": 4.0,
        "gapLength": 4.0,
        "lineWidth": 1.0,
        "labelWidth": 30,
        "labelHeight": 12
      },
      "voiceModeToggle": {
        "buttonWidth": 35,
        "buttonHeight": 18,
        "spacing": 2,
        "padding": 8
      }
    }
  }
}
